# ====================================
# Flask 应用配置
# ====================================
SECRET_KEY=dev-secret-key-please-change-in-production
FLASK_ENV=development
DEBUG=True

# ====================================
# 数据库配置 - 本地开发
# ====================================
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3307
MYSQL_USER=root
MYSQL_PASSWORD=1234
MYSQL_DATABASE=platform

# ====================================
# 数据库配置 - 生产环境（PlanetScale）
# 部署到 Render 时取消注释并填写实际值
# ====================================
# MYSQL_HOST=aws.connect.psdb.cloud
# MYSQL_PORT=3306
# MYSQL_USER=your_planetscale_username
# MYSQL_PASSWORD=pscale_pw_xxxxxxxxxxxxxxxxxx
# MYSQL_DATABASE=qa-education-platform

# ====================================
# AI API 配置（可选）
# ====================================
# 字节跳动 ARK API
ARK_API_KEY=your_ark_api_key_here

# OpenAI API（备选）
OPENAI_API_KEY=your_openai_api_key_here

# ====================================
# 邮件配置
# ====================================
# 163 邮箱配置
MAIL_SERVER=smtp.163.com
MAIL_PORT=465
MAIL_USE_SSL=True
MAIL_USERNAME=your_email@163.com
MAIL_PASSWORD=your_email_auth_code
MAIL_DEFAULT_SENDER=your_email@163.com

# QQ 邮箱配置（备选）
# MAIL_SERVER=smtp.qq.com
# MAIL_PORT=465
# MAIL_USE_SSL=True
# MAIL_USERNAME=your_qq@qq.com
# MAIL_PASSWORD=your_qq_auth_code
# MAIL_DEFAULT_SENDER=your_qq@qq.com

# ====================================
# Render 部署特定配置
# ====================================
# PORT=5000  # Render 会自动设置，无需手动配置
# PYTHON_VERSION=3.9.16

# ====================================
# 使用说明
# ====================================
# 1. 复制此文件为 .env
# 2. 填写实际的配置值
# 3. 确保 .env 文件在 .gitignore 中（不要提交到 Git）
# 4. 生产环境在 Render 的 Environment Variables 中配置

# 生成 SECRET_KEY 的方法：
# python -c "import secrets; print(secrets.token_hex(32))"
